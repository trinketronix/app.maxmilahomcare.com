<script>
    document.addEventListener('DOMContentLoaded', function() {
        /**
         * Encapsulates the simple logic for the Sign-in page.
         */
        const SigninPage = {
            init: function() {
                this.autoHideAlerts();
            },

            /**
             * Finds all elements with the .alert class and sets them to
             * fade out and remove themselves after a 5-second delay.
             */
            autoHideAlerts: function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        alert.style.transition = 'opacity 0.5s ease';
                        alert.style.opacity = '0';
                        // Wait for the transition to finish before removing the element
                        setTimeout(function() {
                            alert.remove();
                        }, 500);
                    }, 5000);
                });
            }
        };

        SigninPage.init();
    });
</script>

