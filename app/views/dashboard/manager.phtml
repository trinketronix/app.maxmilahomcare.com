        .confirmation-option {
            text-align: center;
            font-weight: bold;
            font-size: 1.1rem;
            text-decoration: none;
            color: #000;
            transition: transform 0.2s;
        }
        .confirmation-option:hover {
            transform: scale(1.05);
            color: #000;
        }
        .confirmation-option .icon-bg {
            font-size: 2rem;
            width: 60px;
            height: 60px;
            border-radius: 20%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            margin: 0 auto 0.5rem auto;
