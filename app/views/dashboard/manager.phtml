    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', 'Roboto', sans-serif;
        }

        .page-container {
            max-width: 500px;
            margin: 0 auto;
        }

        /* --- HEADER STYLING --- */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .header-title {
            font-weight: bold;
            font-size: 2.2rem;
        }

        .header-action-left,
        .header-action-right {
            width: 120px;
        }

        .header-action-left {
            text-align: left;
        }

        .header-action-right {
            text-align: center; /* Changed from 'right' to 'center' */
        }

        .sign-out-link {
            text-decoration: none;
            color: #333; /* A nice dark grey, not default blue */
            font-weight: 500;
            font-size: 1rem;
            transition: color 0.2s;
        }

        .sign-out-link:hover {
            color: #000; /* Darken on hover */
            text-decoration: underline; /* Add an underline on hover */
        }

        .sign-out-link i {
            margin-right: 0.4rem; /* Adds space between the icon and "Sign Out" */
        }

        .user-profile-avatar {
            width: 60px;
            height: 60px;
            border: 2px solid #000;
            border-radius: 50%;
            object-fit: cover;
        }
        .user-profile-name {
            font-size: 0.9rem;
            font-weight: 500;
            display: block;
            margin-top: 0.25rem;
            /* text-align: center; is no longer needed here as it's inherited */
        }

        /* --- Navigation Buttons (No changes needed here) --- */
        .nav-buttons-container {
            margin-top: 2rem;
        }
        .nav-button {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            font-size: 1.5rem;
            font-weight: 500;
            border: 2px solid #000;
            border-radius: 1rem;
            text-decoration: none;
            color: #212529;
            background-color: #fff;
            transition: all 0.2s ease-in-out;
